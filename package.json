{
  "name": "foundrydata-monorepo",
  "version": "0.1.0",
  "description": "Open-source test data generator with 100% JSON Schema compliance",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -ws --if-present",
    "dev": "npm run dev -ws",
    "test": "vitest run --config vitest.config.ts",
    "test:matchers": "vitest run --config test/vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:watch:matchers": "vitest --config test/vitest.config.ts",
    "test:benchmarks": "vitest run test/performance/benchmarks.test.ts --config test/vitest.config.ts",
    "test:regression": "vitest run test/performance/regression-suite.test.ts --config test/vitest.config.ts",
    "test:performance": "vitest run test/performance/*.test.ts --config test/vitest.config.ts",
    "test:gen:compliance": "vitest run test/__tests__/integration/generator-compliance/*.test.ts --config test/vitest.config.ts",
    "test:gen:compliance:extra": "GEN_COMPLIANCE_ASSERT_EXTRA=true vitest run test/__tests__/integration/generator-compliance/*.test.ts --config test/vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.test.json",
    "typecheck:build": "tsc -b --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf packages/*/dist",
    "prepublish": "npm run build",
    "prepare": "husky",
    "task-ready": "npm run lint && npm run typecheck && npm run build && npm run test",
    "task-complete": "npm run task-ready && echo 'âœ… Task validation passed - ready to mark as complete'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foundrydata/foundrydata.git"
  },
  "keywords": [
    "test-data",
    "json-schema",
    "data-generator",
    "mock-data",
    "cli",
    "testing",
    "schema-validation",
    "open-source"
  ],
  "author": "fstepho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foundrydata/foundrydata/issues"
  },
  "homepage": "https://github.com/foundrydata/foundrydata#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv-formats-draft2019": "^1.6.1",
    "eslint": "^9.34.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^60.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
