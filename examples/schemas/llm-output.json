{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLM Summarization Result",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "summary": {
      "type": "string",
      "description": "Short natural-language summary of the input document"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "sentiment": {
      "type": "string",
      "enum": [
        "positive",
        "neutral",
        "negative"
      ]
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "summary",
    "keywords"
  ]
}

